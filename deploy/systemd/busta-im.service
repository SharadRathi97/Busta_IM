[Unit]
Description=Busta IM Gunicorn Service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/busta_im/backend
EnvironmentFile=/opt/busta_im/backend/.env
ExecStart=/opt/busta_im/.venv/bin/gunicorn config.wsgi:application --bind 127.0.0.1:8001 --workers 3 --timeout 120 --access-logfile - --error-logfile -
Restart=always
RestartSec=5
KillSignal=SIGQUIT
TimeoutStopSec=30
PrivateTmp=true

[Install]
WantedBy=multi-user.target
